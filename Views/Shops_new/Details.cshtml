<style>
    body {
        background-color: white;
        background-image: none;
    }

    .main_shop {
    }

    .header_shop {
        /*background-color: white;*/
        display: flex;
        justify-content: space-between;
        margin-bottom: 50px;
    }

    .header_detail {
        width: 50%;
        display: flex;
        flex-direction: column;
    }

    .main-body {
    }

    .menu_shop ul li {
        color: gray;
        padding: 0 10px;
        margin-bottom: 5px;
    }
